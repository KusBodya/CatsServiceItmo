<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- ==================== -->
        <!-- Настройки подключения -->
        <!-- ==================== -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/lab-2</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1218</property>

        <!-- ====================== -->
        <!-- Пул соединений (Hikari) -->
        <!-- ====================== -->
        <property name="hibernate.hikari.connectionTimeout">30000</property>
        <property name="hibernate.hikari.minimumIdle">5</property>
        <property name="hibernate.hikari.maximumPoolSize">20</property>

        <!-- ============== -->
        <!-- Диалект и DDL -->
        <!-- ============== -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- ================== -->
        <!-- Логирование и SQL -->
        <!-- ================== -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>



        <!-- ==================== -->
        <!-- Прочие оптимизации -->
        <!-- ==================== -->
        <property name="hibernate.jdbc.batch_size">20</property>
        <property name="hibernate.order_inserts">true</property>
        <property name="hibernate.order_updates">true</property>

        <!-- ================= -->
        <!-- Bean Validation -->
        <!-- ================= -->
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <property name="hibernate.validator.autoregister_listeners">true</property>

        <!-- =================== -->
        <!-- Сущности (ENTITIES) -->
        <!-- =================== -->
        <mapping class="models.Animal"/>
        <mapping class="models.Master"/>
    </session-factory>
</hibernate-configuration>